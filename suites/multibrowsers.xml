<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Open Cart Multi-Browser Testing" parallel="tests" thread-count="3">

    <test name="Chrome Browser">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.opencart.customer.TestCases.AccountRegistrationTest"/>
            <class name="com.opencart.customer.TestCases.LoginTest"/>
        </classes>
    </test>

    <test name="MS Edge Browser">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.opencart.customer.TestCases.AccountRegistrationTest"/>
            <class name="com.opencart.customer.TestCases.LoginTest"/>
        </classes>
    </test>

    <test name="Firefox Browser">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.opencart.customer.TestCases.AccountRegistrationTest"/>
            <class name="com.opencart.customer.TestCases.LoginTest"/>
        </classes>
    </test>

</suite>